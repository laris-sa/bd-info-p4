CREATE TABLE TB_ITENS_NOTAS_FISCAIS(
‘NUM_NF’ INTEGER NOT NULL, 
‘COD_PRO’ INTEGER NOT NULL,
‘QTD’ INTEGER NOT NULL,
PRIMARY KEY (‘NUM_NF’, ‘COD_PRO’)
FOREIGN KEY (‘COD_PRO’) REFERENCES TB_PRODUTOS(‘COD_PRO’)
);

