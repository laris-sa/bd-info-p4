CREATE TABLE TB_CLIENTES (
‘COD_CLI’ INTEGER NOT NULL,
‘NOME_CLI’ TEXT NOT NULL, 
‘END_CLI’ TEXT NOT NULL,
PRIMARY KEY (‘COD_CLI’ AUTOINCREMENT)
);

INSERT INTO TB_CLIENTES (NOME_CLI, END_CLI)
VALUES
(‘JOSE MARIA ALVES’, ‘AV JOAO PESSOA 2081’),
(‘MARIA CONCEICAO TAVARES’, ‘RUA WALDERY UCHOA 4’),
(‘JOAO COSME FONSECA’, ‘RUA PADRE FRANCISCO PINTO 790’);

SELECT * FROM TB_CLIENTES;


CREATE TABLE TB_VENDEDORES(
‘COD_VEND’ INTEGER NOT NULL,
‘NOME_VEND’ TEXT NOT NULL,
PRIMARY KEY (‘COD_VEND’ AUTOINCREMENT)
);

