CREATE TABLE TB_NOTAS_FISCAIS (
‘COD_CLI’ INTEGER NOT NULL,
‘COD_VEND’ INTEGER NOT NULL,
‘NUM_NF’ INTEGER NOT NULL,
‘SERIE_NF’ TEXT NOT NULL,
PRIMARY KEY (‘NUM_NF’ AUTOINCREMENT)
); 

