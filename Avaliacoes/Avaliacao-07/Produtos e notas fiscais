CREATE TABLE TB_PRODUTOS(
‘COD_PRO’ INTEGER NOT NULL,
‘NOME_PROD’ TEXT NOT NULL, 
‘PRECO_UNIT’ REAL NOT NULL,
PRIMARY KEY (‘COD_PRO’ AUTOINCREMENT)
);

